{
  "name": "max-tabs",
  "license": "MPL 2.0",
  "author": "Lim Chee Aun",
  "version": "0.3.0",
  "title": "Max Tabs",
  "id": "maxtabs@cheeaun",
  "description": "Set maximum number of opened tabs in a window.",
  "preferences": [
    {
      "name": "maxTabs",
      "title": "Maximum number of tabs",
      "type": "integer",
      "value": 10
    },
    {
      "name": "maxPrivateBrowsing",
      "title": "Works for Private Browsing",
      "type": "bool",
      "value": true
    },
    {
      "name": "tabCloseMode",
      "title": "Which tab to close",
      "type": "menulist",
      "value": 0,
      "options": [
        {"label": "Last opened", "value": 0},
        {"label": "Least frequently used", "value": 1},
        {"label": "Least recently used", "value": 2}
      ]
    }
  ],
  "permissions": {
    "private-browsing": true,
    "multiprocess": true
  },
  "dependencies": {
    "chroma-js": "~0.7.4",
    "lodash.minby": "~4.6.0"
  },
  "devDependencies": {
    "jpm": "~1.0.0"
  },
  "scripts": {
    "start": "jpm run",
    "package": "jpm xpi"
  }
}
